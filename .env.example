# 应用配置
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# 数据库配置
DATABASE_PATH=./data/db.sqlite

# S3存储配置
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=cloudpaste
S3_REGION=us-east-1

# MinIO配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# 安全配置
JWT_SECRET=change-this-to-your-jwt-secret
SESSION_SECRET=change-this-to-your-session-secret
COOKIE_SECRET=change-this-to-your-cookie-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS配置
CORS_ORIGIN=*
TRUST_PROXY=false
ENABLE_HTTPS=false
SECURE_HEADERS=false

# 文件配置
MAX_FILE_SIZE=5
TOTAL_STORAGE_GB=10
ALLOWED_FILE_TYPES=text/*,application/json,application/xml,application/zip,application/x-rar-compressed,application/x-7z-compressed,application/x-zip-compressed,application/octet-stream

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# 缓存配置
ENABLE_RESPONSE_CACHE=true
CACHE_DURATION=3600

# 管理员配置
ADMIN_USER=admin
ADMIN_PASSWORD=change-this-to-your-admin-password
ADMIN_TOKEN=change-this-to-your-admin-token

# 提示：部署到生产环境时，请修改以下配置
# 1. JWT_SECRET: 使用强密码
# 2. SESSION_SECRET: 使用强密码
# 3. COOKIE_SECRET: 使用强密码
# 4. ADMIN_PASSWORD: 修改管理员密码
# 5. ADMIN_TOKEN: 修改管理员令牌
# 6. MINIO_ROOT_USER: 修改MinIO用户名
# 7. MINIO_ROOT_PASSWORD: 修改MinIO密码

# 可选：自定义域名配置
# HOST=your-domain.com 
# 应用配置
PORT=3000
NODE_ENV=production

# 数据库配置
DATABASE_PATH=./data/db.sqlite

# S3存储配置
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=cloudpaste
S3_REGION=us-east-1

# MinIO配置（如果使用内置MinIO）
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# 安全配置
JWT_SECRET=your-jwt-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*
TRUST_PROXY=false
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# 文件配置
MAX_FILE_SIZE=5  # 单位：GB
TOTAL_STORAGE_GB=10  # 总存储容量，单位：GB
ALLOWED_FILE_TYPES=text/*,application/json,application/xml,application/zip,application/x-rar-compressed,application/x-7z-compressed,application/x-zip-compressed,application/octet-stream

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# 缓存配置
ENABLE_RESPONSE_CACHE=true
CACHE_DURATION=3600 

# 管理员配置
ADMIN_USER=admin
ADMIN_PASSWORD=admin
ADMIN_TOKEN=your-secure-admin-token 